{
  "name": "web",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "src",
  "projectType": "application",
  "targets": {
    "contentlayer": {
      "executor": "nx:run-commands",
      "options": {
        "command": "contentlayer build",
        "cwd": "web"
      },
      "outputs": [
        "{projectRoot}/.contentlayer",
        "{projectRoot}/.contentlayer/generated"
      ]
    },
    "build": {
      "executor": "@codebuff/build-tools:infisical-run",
      "outputs": ["{projectRoot}/.next"],
      "options": {
        "command": "next build",
        "cwd": "web"
      },
      "dependsOn": ["^build", "contentlayer"]
    },
    "dev": {
      "executor": "@codebuff/build-tools:infisical-run",
      "options": {
        "command": "next dev -p 3000",
        "cwd": "web"
      },
      "dependsOn": ["contentlayer", "root:build-env"]
    },
    "start": {
      "executor": "@codebuff/build-tools:infisical-run",
      "options": {
        "command": "next start",
        "cwd": "web"
      }
    },
    "discord:register": {
      "executor": "@codebuff/build-tools:infisical-run",
      "options": {
        "command": "bun run scripts/discord/register-commands.ts",
        "cwd": "web"
      }
    }
  },
  "implicitDependencies": ["common", "@codebuff/billing"]
}
