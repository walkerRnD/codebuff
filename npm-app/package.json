{
  "name": "codebuff",
  "version": "1.0.333",
  "description": "AI dev assistant",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "codebuff": "dist/index.js"
  },
  "scripts": {
    "prepublishOnly": "nx clean npm-app && nx build npm-app && nx run npm-app:prepublish",
    "postpublish": "echo \"const fs=require('fs');fs.copyFileSync('temp.package.json','package.json');fs.unlinkSync('temp.package.json');\" | bun run -",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "test": "jest",
    "start": "nx run npm-app:start",
    "start-js": "nx clean npm-app && nx build npm-app && nx run npm-app:start-js",
    "start-max": "nx run npm-app:start-max",
    "start-lite": "nx run npm-app:start-lite",
    "start-ask": "nx run npm-app:start-ask",
    "start-dir": "nx run npm-app:start-dir",
    "start-experimental": "nx run npm-app:start-experimental",
    "start-manifold": "nx run npm-app:start-manifold",
    "start-litestar": "nx run npm-app:start-litestar",
    "start-jpcsp": "nx run npm-app:start-jpcsp",
    "start-vscode": "nx run npm-app:start-vscode",
    "start-nushell": "nx run npm-app:start-nushell",
    "start-prod": "nx run npm-app:start-prod",
    "typecheck-this-package": "tsc --noEmit && tsc-alias",
    "typecheck": "npm run build",
    "build": "nx build npm-app"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@types/diff": "5.2.1",
    "@types/micromatch": "^4.0.9",
    "@vscode/ripgrep": "1.15.9",
    "ai": "4.3.16",
    "axios": "1.7.4",
    "code-map": "1.0.0",
    "commander": "^13.1.0",
    "diff": "5.2.0",
    "git-url-parse": "^16.1.0",
    "ignore": "7.0.3",
    "isomorphic-git": "^1.29.0",
    "jsonc-parser": "^3.3.1",
    "lodash": "*",
    "micromatch": "^4.0.8",
    "nanoid": "5.0.7",
    "onetime": "5.1.2",
    "picocolors": "1.1.0",
    "pino": "9.4.0",
    "posthog-node": "4.17.2",
    "puppeteer-core": "^24.2.0",
    "systeminformation": "5.23.4",
    "tree-sitter": "0.21.1",
    "tree-sitter-c": "0.23.0",
