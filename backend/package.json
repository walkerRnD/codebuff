{
  "name": "backend",
  "version": "1.0.61",
  "description": "Backend server for Manicode",
  "main": "dist/index.js",
  "license": "UNLICENSED",
  "scripts": {
    "start": "bun run -r tsconfig-paths/register src/index.ts",
    "start-js": "bun run dist/index.js",
    "prebuild": "bun clean && cd ../common && bun run ../scripts/build-version-info.js",
    "build": "tsc --build && tsc-alias",
    "postbuild": "mkdir -p dist/common && cp -R ../common/dist/* dist/common && tsc-alias",
    "clean": "rm -rf dist && rm -f tsconfig.tsbuildinfo",
    "dev": "nodemon --exec bun run -r tsconfig-paths/register src/index.ts",
    "test": "bun test",
    "test:manifold": "bun test src/__tests__/manifold-project.test.ts",
    "test:watch": "bun test --watch"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "0.27.1",
    "diff": "5.2.0",
    "dotenv": "16.4.5",
    "express": "4.19.2",
    "ignore": "5.3.2",
    "lodash": "*",
    "openai": "^4.56.0",
    "tiktoken": "1.0.15",
    "ts-pattern": "5.3.1",
    "ws": "8.18.0",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@types/diff": "^5.0.3",
    "@types/express": "^4.17.13",
    "@types/ws": "^8.5.5",
    "bun-types": "^1.1.25",
    "nodemon": "^2.0.15",
    "tsc-alias": "^1.8.6",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "@types/lodash": "*",
    "@types/node": "*"
  }
}
