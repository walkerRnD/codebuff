{
  "name": "common",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc",
        "cwd": "common"
      },
      "dependsOn": ["root:build-env"]
    },
    "db-migrate": {
      "executor": "@codebuff/build-tools:infisical-run",
      "options": {
        "command": "drizzle-kit push --config=./src/db/drizzle.config.ts",
        "cwd": "common"
      }
    },
    "db-generate": {
      "executor": "@codebuff/build-tools:infisical-run",
      "options": {
        "command": "drizzle-kit generate --config=./src/db/drizzle.config.ts",
        "cwd": "common"
      }
    },
    "db-studio": {
      "executor": "@codebuff/build-tools:infisical-run",
      "options": {
        "command": "drizzle-kit studio --config=./src/db/drizzle.config.ts",
        "cwd": "common"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun test $(find src -name *.test.ts)",
        "cwd": "common"
      }
    }
  }
}
